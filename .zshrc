# auto start tmux
tmux_count=$(ps -ax | grep '[t]mux' | wc -l)
if [ $SHLVL = 1 ]; then
  if [ $tmux_count = 0 ]; then
    tmux -u new-session
  elif [ $tmux_count = 1 ]; then
    tmux -u attach
  fi
fi
